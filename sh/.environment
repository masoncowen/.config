CONFIG=$XDG_CONFIG_HOME; export CONFIG
BIN=$CONFIG/bin; export BIN

SH_CONFIG=$CONFIG/sh; export SH_CONFIG
PROFILE=$SH_CONFIG/.profile; export PROFILE
ENV=$SH_CONFIG/.environment; export ENV
ALIAS=$SH_CONFIG/.alias; export ALIAS
FUNC=$SH_CONFIG/.func; export FUNC

VIM_CONFIG=$CONFIG/vim/.vimrc; export VIM_CONFIG
TMUX_CONFIG=$CONFIG/tmux/.tmux.conf; export TMUX_CONFIG

BROWSER="firefox"; export BROWSER

EDITOR=ex; export EDITOR
VISUAL="vim"; export VISUAL
