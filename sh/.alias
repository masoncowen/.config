alias ds='doas su -l'
alias sg='doas su -l git'
alias ga='git-all'
alias ls='ls -F'
alias ?='ddg'

#Replace config files from home
alias tmux="tmux -2 -f $CONFIG/tmux/tmux.conf"
alias vim="vim -S $CONFIG/vim/vimrc"

#Source files
alias sa=". $CONFIG/sh/.alias"
alias sp=". $CONFIG/sh/.profile"

#Single Letters
alias d="doas"
alias e=$EDITOR
alias g="git"
alias t="tmux"
alias v=$VISUAL

#Tmux commands
alias tsl="tmux split-window -h less"

#Rsync commands
alias wpsh='rsync -vrutd ~/writing OT:.'
alias wpll='rsync -vrutd OT:writing ~'
alias cpsh='rsync -vrutd ~/config OT:.'
alias cpll='rsync -vrutd OT:config ~'
